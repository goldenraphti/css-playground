---
import Layout from "../layouts/Layout.astro";
---

<Layout title='Web Experiment - Raphael Ferrand digital garden'>
  <main>
    <h1>404 ... we failed you ... sorry</h1>
    <img
      class='illustration storm'
      src='/images/storm-rain.png'
      alt='storm & rainy dark cloud'
    />
    <img
      class='illustration ghost'
      src='/images/pink-ghost.png'
      alt='cute pink ghost'
    />
    <a href='/' class='btn lg'>Get me back to the homepage</a>
  </main>
</Layout>
<style>
  main {
    --primary-color-full: var(--purple-1-oklch-full);
    --primary-color-25: var(--purple-1-oklch-25);
    display: grid;
    place-items: center;
    place-content: center;
    padding: 5vw 10vw;
    flex: 1;
    background: var(--primary-color-25);
    border-radius: 0 0 6rem 6rem;
  }
  h1 {
    font-size: 3rem;
    text-align: center;
    color: var(--purple-1-oklch-full);
  }
  .illustration {
    position: absolute;
  }
  .storm {
    width: 100px;
    top: 5%;
    left: 20%;
    animation: 5s bounce-wait 0s ease-in-out infinite;
  }
  .ghost {
    width: 100px;
    height: auto;
    bottom: 2%;
    right: 20%;
    animation: 5s bounce-wait 0.3s ease-in-out infinite;
  }
  @media screen and (min-width: 800px) {
    h1 {
      font-size: 4rem;
    }
    .storm,
    .ghost {
      width: 300px;
    }
    .storm {
      top: 15%;
    }
    .ghost {
      bottom: 15%;
    }
  }
  @media screen and (min-width: 1000px) {
    .storm,
    .ghost {
      width: 200px;
    }
    .storm {
      top: 10%;
    }
    .ghost {
      bottom: 10%;
    }
  }
</style>
