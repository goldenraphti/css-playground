---
const posts = ["has", "subgrid", "container", "css layers"];
const linksIllustrations = [
  "Saly-1.png",
  "Saly-8.png",
  "Saly-11.png",
  "Saly-17.png",
  "Saly-20.png",
  "3d-plastic-people-tv.png",
];
import { experimentsPagesDetails } from "../utils/experimentsPagesDetails";
---

<ul>
  {
    experimentsPagesDetails.map((experiment, i) => (
      <li>
        <a
          href={`/${experiment.path}`}
          style={`--bg-color: var(${experiment.bgColor}); --txt-color: var(${experiment.textColor});`}
        >
          <div class='tags'>
            {experiment.tags.map((tag) => (
              <span>{tag}</span>
            ))}
          </div>
          <div class='title'>{experiment.title}</div>
          <img
            src={`/images/${experiment?.illustration ?? linksIllustrations[i]}`}
            alt=''
          />
        </a>
      </li>
    ))
  }
</ul>
<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 3rem;
    list-style-type: none;
    padding: 0;
    max-width: 80vw;
    margin: auto;
  }
  li {
    position: relative;
  }
  a {
    border-radius: 25px;
    height: 200px;
    width: 250px;
    padding: 2rem;
    display: grid;
    grid-template-rows: 10% 60% 10% 10%;
    grid-template-columns: 1fr;
    font-size: 2rem;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: 600;
    background: var(--bg-color);
    color: var(--txt-color);
    transition: border ease-in-out 0.1s;
    border: 1px solid transparent;
  }
  a:hover {
    border: 1px solid var(--txt-color);
    box-shadow: var(--bg-color) 0 0 50px;
  }
  a:focus-visible {
    outline: 2px solid var(--txt-color);
  }
  li .title {
    grid-column: 1 / -1;
    grid-row: 2 / 4;
    justify-self: center;
    align-self: center;
  }
  li img {
    width: 150px;
    height: auto;
    position: absolute;
    bottom: 10px;
    right: 10px;
  }
  .tags {
    display: flex;
    gap: 10px;
    align-self: start;
    justify-self: start;
    grid-column: 1 / -1;
    grid-row: 1 / 2;
  }
  .tags span {
    font-size: 0.4em;
    background: var(--bg-color);
    padding: 4px 6px;
    border-radius: 5px;
  }
  @media screen and (min-width: 800px) {
    a {
      width: 300px;
    }
  }
</style>
