---
const posts = ["has", "subgrid", "container", "css layers"];
const linksIllustrations = [
  "Saly-1.png",
  "Saly-8.png",
  "Saly-11.png",
  "Saly-17.png",
  "Saly-20.png",
  "3d-plastic-people-tv.png",
];
import { experimentsPagesDetails } from "../utils/experimentsPagesDetails";
---

<ul>
  {
    experimentsPagesDetails.map((experiment, i) => (
      <li>
        <a
          href={`/${experiment.path}`}
          style={`--bg-color: var(${experiment.bgColor}); --txt-color: var(${experiment.textColor});`}
        >
          {experiment.title}
          <img
            src={`/images/${experiment?.illustration ?? linksIllustrations[i]}`}
            alt=''
          />
        </a>
      </li>
    ))
  }
</ul>
<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 3rem;
    list-style-type: none;
    padding: 0;
    max-width: 80vw;
    margin: auto;
  }
  li {
    position: relative;
  }
  a {
    border-radius: 25px;
    height: 200px;
    width: 300px;
    padding: 2rem;
    display: grid;
    place-items: center;
    font-size: 2rem;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: 600;
    background: var(--bg-color);
    color: var(--txt-color);
  }
  li img {
    width: 150px;
    height: auto;
    position: absolute;
    bottom: 10px;
    right: 10px;
  }
</style>
